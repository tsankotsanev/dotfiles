[http]
	sslbackend = openssl
	sslVerify = true

[credential]
	helper = store

[core]
    pager = delta
	excludesfile = /home/whitez/.gitignore_global

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true 
    light = false      
[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[alias]
    st = status
    a = "!git status --short | awk '{print $2}' | fzf | xargs git add"
    d = diff
    ci = commit
    ca = commit -a
    co = checkout
    ps = "!git push origin $(git rev-parse --abbrev-ref HEAD)"
    pl = "!git pull origin $(git rev-parse --abbrev-ref HEAD)"
    l = log --pretty=format:'%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%Creset' --graph --date=relative --decorate --all
    df = "!f() { git l | fzf | awk '{print $2}' | xargs sh -c 'git diff $1^ $1' sh ; }; f"
    br = branch
    ba = branch -a
    bm = branch --merged
    bn = branch --no-merged
    open = "!hub browse"
